        <move id="&rleg5;" angle="0"/>
        <move id="&lleg6;" angle="0"/>
        <move id="&rleg6;" angle="0"/>
        <move id="&larm1;" angle="-90"/>
        <move id="&rarm1;" angle="-90"/>
        <move id="&larm2;" angle="0"/>
        <move id="&rarm2;" angle="0"/>
        <move id="&larm3;" angle="0"/>
        <move id="&rarm3;" angle="0"/>
        <move id="&larm4;" angle="0"/>
        <move id="&rarm4;" angle="0"/>
    </slot>

    <slot name="liftRightLeg" delta="0.05">
        <move id="&lleg3;" angle="5"/>
        <move id="&lleg4;" angle="-10"/>
        <move id="&lleg5;" angle="5"/>
    </slot>

    <slot name="spreadLegs" delta="0.15">
        <move id="&rleg1;" angle="-10"/>
        <move id="&rleg2;" angle="-10"/>
        <move id="&rleg3;" angle="-10"/>

        <move id="&lleg1;" angle="-10"/>
        <move id="&lleg2;" angle="10"/>
        <move id="&lleg3;" angle="-10"/>
    </slot>

    <slot name="layRightLeg" delta="0.1">
        <move id="&lleg3;" angle="0"/>
        <move id="&lleg4;" angle="0"/>
        <move id="&lleg5;" angle="0"/>
    </slot>

